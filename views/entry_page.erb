<div class="entry">
  <% unless @skip_masthead %>
  <% if @page.show_upsell? %>
  <div class="row" id="upsell" style="margin-left: 0.1em;">
    <div class="span3">
      <div style="float: left; height: 100x; padding-top: 1em; padding-bottom: 1em; text-align: center; margin-right: 1.5em">
        <a href="https://www.masteringmodernpayments.com">
          <img src="https://d2s7foagexgnc2.cloudfront.net/files/1580aa8b7ecc41ab8450/mmp_v2_with_cover-2.png" style="height: 100px" alt="Mastering Modern Payments" />
        </a>
      </div>
    </div>
    <div class="span4" style="margin-left: 1em; margin-top: 1em">
      My book <strong><em><a href="https://www.masteringmodernpayments.com">Mastering Modern Payments</a></em></strong> is out now!<br>
      Integrate Stripe into your Rails app in no time flat. Payments, subscriptions, marketplaces, and
      more than 100 examples.
    </div>
  </div>
  <% end %>  
  <h1>
    <a href="<%= @page.html_path %>">
      <% if @page['draft'] %>
        DRAFT DRAFT DRAFT
      <% end %>
      <%= @page['title'] %>
    </a>
  </h1>
  <% if @page.is_blog_post? %>
  <div class="top-metadata">
    <p class="date pull-right" style="text-align: right">
      Share: <%= render :erb, :share_links, layout: false %>
    </p>
    <p class="date"><%= @page.reading_time %> min read &mdash; Get free updates of new posts <a href="/newsletter?topic=<%= @page.topic %>">here</a></p>
    <p class="date">
    </p>
  </div>
  <% end %>
  <% end %>
  <%= @page.render(nil, @app) %>

  <% if @page.show_byline? %>
    <%= partial :byline, topic: @page.topic %>
  <% end %>
  <% unless @skip_masthead || @page.headers['skip_metadata'] %>
  <div id="tags-and-formats">
    <p class="date">
      <% if @page.date %>
        <%= @page.short_date %>&nbsp;&nbsp;
      <% end %>
      <% if @page.is_blog_post? %>
        Share:&nbsp;
        <%= render :erb, :share_links, layout: false %>
      <% end %>
      &nbsp;
    </p>
    <p class="date">
      <% if @page.topic %>
        Posted in: <a href="/topic/<%= @page.topic %>"><%= @page.topic %></a>&nbsp;&nbsp;
      <% end %>
    </p>
    <p class="date">
      <% if @page.tags.length > 0 %>
        Tagged: <% @page.tags.each do |tag| %>
          <a href="/tag/<%= tag %>"><%= tag %></a>
        <% end %>
      <% end %>
    </p>
    <% if @page.is_blog_post? && has_related_posts(@page) %>
      <h4>Related Posts</h4>
      <ul class="archive-list">
        <% related_posts(@page).each do |page| %>
          <li><span class="date fixed-width"><%= page.date.strftime('%Y-%m-%d') %> &raquo;</span> <a href="<%= page.html_path %>"><%= page['title'] %></a></li>      
        <% end %>
      </ul>
    <% end %>
  </div>
  <% end %>
</div>
